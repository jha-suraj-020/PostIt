<%- include('../partials/header') %>

<div class="container">
    <h1 class="text-center m-4">Edit <%= cmpground.name %>!!</h1>
    <form action="/campgrounds/<%= cmpground._id %>" class="cmp-file" method="POST" style="width: 30%; margin: 0 auto;"
        enctype="multipart/form-data">
        <div class="form-group">
            <input class="form-control" type="text" name="name" value="<%= cmpground.name %>">
        </div>
        <div class="form-group">
            <input type="file" name="file">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="desc" value="<%= cmpground.desc %>">
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">go for it!</button>
        </div>
        <a href="/campgrounds">Go back</a>
    </form>
</div>

<%- include('../partials/footer') %>