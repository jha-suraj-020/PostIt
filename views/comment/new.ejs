<%- include('../partials/header') %>

<div class="container">
    <h1 class="text-center m-4">Add new comment to <%= cmpground.name %>!!</h1>
    <form action="/campgrounds/<%= cmpground._id %>/comments" method="POST" style="width: 30%; margin: 0 auto;">
        <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" placeholder="text">
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">go for it!</button>
        </div>
        <a href="/campgrounds">Go back</a>
    </form>
</div>

<%- include('../partials/footer') %>