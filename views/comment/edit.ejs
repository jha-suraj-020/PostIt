<%- include('../partials/header') %>

<div class="container">
    <h1 class="text-center m-4">Edit comment to Comment!!</h1>
    <form action="/campgrounds/<%= cmpground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST"
        style="width: 30%; margin: 0 auto;">
        <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">go for it!</button>
        </div>
        <a href="/campgrounds/<%= cmpground_id %>">Go back</a>
    </form>
</div>

